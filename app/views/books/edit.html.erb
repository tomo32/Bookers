<h2 class="edit-head">Editing Book</h2>

<%= form_with model:@book, local: true do |f| %>
  <div class="edit-content">Title</br>
    <%= f.text_field :title %>
  </div></br>
  <div class="edit-content">Body</br>
    <%= f.text_area :body %></br>
    <%= f.submit ' Update Book ' %></br>
      <% if @book.errors.any? %>
    raised <%= @book.errors.count %> errors
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  </div>
<% end %>

<div class="edit-footer">
  <%= link_to "Show", book_path %> | <%= link_to "Back", books_path %>
</div>
